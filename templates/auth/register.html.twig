{% extends 'base.html.twig' %}

{% block title %}Register user {% endblock %}

{% block body %}
    <h1 class="m-3">Register User</h1>

    <form method="POST" action="{{ path('store_user') }}">

        <div class="form-group row ml-1">
            <label for="name" class="form-control col-sm-1">Username</label>
            <input type="text" class="form-control col-sm-4" id="name" name="name">
        </div>

        <div class="form-group row ml-1">
            <label for="password" class="form-control col-sm-1">Password</label>
            <input type="text" class="form-control col-sm-4" id="password" name="password">
        </div>

        <div class="form-group ml-1">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </form>
{% endblock %}