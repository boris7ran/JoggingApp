<!DOCTYPE html>
<html lang="en">
    <body>
        <div>
            <nav class="navbar navbar-expand-lg navbar-light bg-dark">
                {% if app.user %}
                    <button class="navbar-brand pr-1"><a href="{{ path('show_records', {id: app.user.id}) }}" style="text-decoration: none; color: black">My Records</a></button>
                {% endif %}
                {% if not app.user %}
                    <button class="navbar-brand pr-1"><a href="{{ path('login_user') }}" style="text-decoration: none; color: black">Login</a></button>
                    <button class="navbar-brand pr-1"><a href="{{ path('register') }}" style="text-decoration: none; color: black">Register</a></button>
                {% endif %}
            </nav>
        </div>
    </body>
</html>
